# Bitget API Configuration
BITGET_API_ACCESS_KEY=your_bitget_api_access_key
BITGET_API_SECRET_KEY=your_bitget_api_secret_key
BITGET_API_PASSPHRASE=your_bitget_api_passphrase
BITGET_BASE_URL=https://api.bitget.com

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-reasoner

# AWS Configuration (only needed for DynamoDB storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-southeast-1

# Storage Configuration
# Options: 'json' (local file) or 'dynamodb'
STORAGE_TYPE=json
JSON_STORAGE_PATH=data/coin_analyses.json

# DynamoDB Configuration (only used when STORAGE_TYPE=dynamodb)
DYNAMODB_TABLE_NAME=lumina_coin_analysis
DYNAMODB_ENDPOINT_URL=http://localhost:8000
USE_LOCAL_DYNAMODB=true

# Application Configuration
TRADE_MODE=paper
TOP_COINS_COUNT=200
ANALYSIS_INTERVAL_HOURS=6
LOG_LEVEL=INFO

# Fundamental Analysis Configuration
ENABLE_FUNDAMENTAL_ANALYSIS=true
FUNDAMENTAL_CACHE_PATH=data/fundamental_cache.json
COINGECKO_API_KEY=

# Portfolio Analysis Configuration
# Minimum balance (in coin units) to include portfolio coin in analysis
MIN_PORTFOLIO_BALANCE=1.0
# Whether to include portfolio holdings in market analysis
INCLUDE_PORTFOLIO_IN_ANALYSIS=true

# PNL Tracking Configuration
TRADE_FILLS_CACHE_PATH=data/trade_fills_cache.json
PAPER_TRADES_PATH=data/paper_trades.json
# Hours before trade fills cache is refreshed
TRADE_FILLS_CACHE_TTL_HOURS=1

# Coin Screening Configuration
# Enable smart coin screening (vs simple top-N by volume)
SCREENING_ENABLED=true
# Number of coins to return after screening (default: 10)
SCREENING_RESULT_LIMIT=10

# Price filters (percentage) - coins in "sweet spot" get bonus points
SCREEN_PRICE_CHANGE_24H_MIN=15.0
SCREEN_PRICE_CHANGE_24H_MAX=50.0
SCREEN_PRICE_CHANGE_7D_MIN=30.0
SCREEN_PRICE_CHANGE_7D_MAX=100.0
# 24h change above this is excluded as pump & dump (default: 200%)
SCREEN_PUMP_DUMP_THRESHOLD=200.0

# Volume spike filters (ratio of current vs 7-day average)
SCREEN_VOLUME_SPIKE_MIN=2.0
SCREEN_VOLUME_SPIKE_MAX=5.0

# Market cap filters (USD)
SCREEN_MARKET_CAP_MIN=10000000
SCREEN_MARKET_CAP_MAX=500000000

# Minimum coin age in days - coins younger than this are excluded (default: 30)
SCREEN_MIN_COIN_AGE_DAYS=30

# Slack Notifications Configuration
# Webhook URL for trade notifications (get from Slack App settings)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/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
# Enable/disable Slack notifications (default: false)
SLACK_NOTIFICATIONS_ENABLED=true